    function testRevertsIfMintedDscBreaksHealthFactor() public {
        (, int256 price,,,) = MockV3Aggregator(ethUsdPriceFeed).latestRoundData();
        uint256 amountToMint = (AMOUNT_COLLATERAL * (uint256(price) * dsce.getAdditionalFeedPrecision())) / dsce.getPrecision();
        //console.log('amountToMint',amountToMint);
        vm.startPrank(USER);
        ERC20Mock(weth).approve(address(dsce), amountToMint);

        //console.log('Usd value of Collateral',dsce.getUsdValue(weth, AMOUNT_COLLATERAL));
        uint256 expectedHealthFactor = dsce.calculateHealthFactor(amountToMint, dsce.getUsdValue(weth, AMOUNT_COLLATERAL));
        //console.log('expectedHealthFactor',expectedHealthFactor);

        // When running dsce.depositCollateralAndMintDsc() it is suppose to revert, as the amountToMint is exactly the USD value of the collateral, and is more than the safety threshold.
        // This is why it breaks the safety healthFactor, and is < 1. 
        vm.expectRevert(abi.encodeWithSelector(DSCEngine.DSCEngine__BreaksHealthFactor.selector, expectedHealthFactor));
        dsce.depositCollateralAndMintDsc(weth, AMOUNT_COLLATERAL, amountToMint);
        vm.stopPrank();
    }

